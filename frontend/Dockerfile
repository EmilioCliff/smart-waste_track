FROM node:20-alpine
WORKDIR /app
COPY package.json .
RUN npm install
RUN npm i -g serve

ARG VITE_GOOGLE_MAPS_API_KEY
ARG VITE_MAP_ID
ARG VITE_BACKEND_URL
ARG VITE_REFETCH_INTERVAL
ARG VITE_AWS_GRAPHQL_ENDPOINT
ARG VITE_AWS_REGION
ARG VITE_AWS_AUTH_TYPE
ARG VITE_AWS_API_KEY

COPY . .
RUN npm run build

EXPOSE 3030
CMD [ "serve", "-s", "dist" ]